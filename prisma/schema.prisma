// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  ADMIN
  STAFF
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String?   @unique
  emailVerified    DateTime?
  image            String?
  password         String?
  credits          Int       @default(0)
  stripeCustomerId String?   @unique
  ipaddress        String?
  extraInfo        Json?
  accounts         Account[]
  sessions         Session[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  uploadedImages   UploadedImage[]
  stripeCustomer   StripeCustomer?
  adGenerations    AdGeneration[]
  creditHistory    UserCreditHistory[]
  emails           Email[]
  unsubscribeTokens UnsubscribeToken[]

  banned           Boolean   @default(false)
  allowMarketing   Boolean   @default(true)

  role             UserRole  @default(USER)
}

model UploadedImage {
  id          String    @id @default(cuid())
  url         String
  key         String    @unique
  size        Int
  mimeType    String
  imageHash   String?
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId      String?
  adGenerations AdGeneration[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([imageHash])
}

model StripeCustomer {
  id              String         @id // Stripe customer ID
  user            User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String?        @unique
  email           String?
  name            String?
  metadata        Json?
  subscriptions   StripeSubscription[]
  charges         StripeCharge[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("stripe_customers")
}

model StripeProduct {
  id              String         @id // Stripe product ID
  name            String
  description     String?
  active          Boolean        @default(true)
  metadata        Json?
  prices          StripePrice[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("stripe_products")
}

model StripePrice {
  id              String         @id // Stripe price ID
  product         StripeProduct? @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId       String?
  active          Boolean        @default(true)
  currency        String
  unitAmount      Int
  type            String
  interval        String?
  intervalCount   Int?
  metadata        Json?
  subscriptions   StripeSubscription[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("stripe_prices")
}

model StripeSubscription {
  id                 String         @id // Stripe subscription ID
  customer           StripeCustomer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId         String
  price              StripePrice    @relation(fields: [priceId], references: [id], onDelete: Cascade)
  priceId            String
  status             String
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  canceledAt         DateTime?
  metadata           Json?
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt

  @@map("stripe_subscriptions")
}

model StripeCharge {
  id              String         @id // Stripe charge ID
  customer        StripeCustomer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId      String
  amount          Int
  currency        String
  status          String
  description     String?
  metadata        Json?
  paymentMethod   String?
  refunded        Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("stripe_charges")
}

model VerificationToken {
  id         String   @id @default(cuid())
  token      String   @unique
  identifier String
  expires    DateTime
  createdAt  DateTime @default(now())

  @@index([identifier])
}

enum AdGenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum AdType {
  PRODUCT_AD
  BANNER_AD
  SOCIAL_AD
  DISPLAY_AD
}

model AdGeneration {
  id              String             @id @default(cuid())
  prompt          String
  imageUrls       String[]
  adType          AdType             @default(PRODUCT_AD)
  width           Int                @default(1024)
  height          Int                @default(1024)
  seed            Int?
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  inputImage      UploadedImage?     @relation(fields: [inputImageId], references: [id], onDelete: SetNull)
  inputImageId    String?
  modelId         String
  modelOptions    Json?
  favorite        Boolean            @default(false)
  status          AdGenerationStatus @default(PENDING)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@index([userId])
  @@index([inputImageId])
}

enum CreditReason {
  PURCHASE
  REFERRAL
  PROMOTION
  DAILY_RESET
  MONTHLY_RESET
  FAILED_GENERATION
  REGISTRATION_BONUS
  CANCELLED_GENERATION
  SUBSCRIPTION_RENEWAL
  SUBSCRIPTION_UPDATE
  SUBSCRIPTION_CREATE
  DUPLICATE_DETECTION
  OTHER
}

model UserCreditHistory {
  id              String       @id @default(cuid())
  user            User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId          String?
  credits         Int
  previousCredits Int
  newCredits      Int
  reason          CreditReason @default(OTHER)
  reasonExtra     String?      @db.Text
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([userId])
}

model BannedIP {
  id        String   @id @default(cuid())
  ipAddress String   @unique
  reason    String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("banned_ips")
}

model BannedDomain {
  id        String   @id @default(cuid())
  domain    String   @unique
  reason    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([domain])
}

enum EmailType {
  WELCOME
  PASSWORD_RESET
  EMAIL_CONFIRMATION
  FIRST_SALE_OFFER
  FREE_CREDITS_REMINDER
  ANNOUNCEMENT
  OTHER
}

model Email {
  id           String     @id @default(cuid())
  resendId     String?    @unique
  fromEmail    String
  to           Json       @default("[]")
  cc           Json?      @default("[]")
  bcc          Json?      @default("[]")
  replyTo      Json?      @default("[]")
  subject      String?
  sendAt       DateTime   @default(now())
  body         String?    @db.Text
  htmlMessage  String?    @db.Text
  emailType    EmailType? @default(OTHER)
  userId       String?
  user         User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  statuses     EmailStatus[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([resendId])
  @@index([userId])
  @@index([emailType])
}

model EmailStatus {
  id           String   @id @default(cuid())
  email        Email    @relation(fields: [emailId], references: [id], onDelete: Cascade)
  emailId      String
  status       String
  allMetadata  Json?    @default("{}")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([emailId])
  @@index([status])
}

model UnsubscribeToken {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  usedAt    DateTime?
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([token])
  @@index([email])
}
